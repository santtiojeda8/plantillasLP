---
import "../styles/Pricing.css";

const plans = [
    {
        name: 'Plan Básico',
        price: '$200',
        features: ['Acceso a rutinas', 'Soporte vía email', 'Guía de nutrición básica'],
    },
    {
        name: 'Plan Pro',
        price: '$350',
        features: ['Todo del Plan Básico', 'Rutinas personalizadas', 'Seguimiento semanal', 'Consultas por videollamada'],
    },
    {
        name: 'Plan Premium',
        price: '$500',
        features: ['Todo del Plan Pro', 'Plan de nutrición personalizado', 'Soporte 24/7', 'Asesoría ilimitada'],
    },
];
---

<section class="pricing-section">
  <div class="pricing-container">
    <h2>Elige el plan que se adapte a ti</h2>
    <div class="pricing-grid">
      {plans.map(plan => (
        <div class="plan-card">
          <h3>{plan.name}</h3>
          <p class="price">{plan.price}</p>
          <ul>
            {plan.features.map(feature => (
              <li>{feature}</li>
            ))}
          </ul>
          <a href="#" class="btn">Comprar ahora</a>
        </div>
      ))}
    </div>
  </div>
</section>